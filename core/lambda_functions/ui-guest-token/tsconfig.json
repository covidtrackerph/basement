{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "lib": ["esnext"],
      "outDir": "./build",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": ["src", "types.d.ts"]
  }
  